<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Page</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <form action="/register" method="POST" class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h1 class="text-3xl font-semibold text-center text-gray-800 mb-4">Register</h1>
        <p class="text-center text-gray-600 mb-6">Create your account by filling out the form below.</p>

        <!-- Username Field -->
        <div class="mb-4">
            <% if (typeof errors !== 'undefined' && errors.some(e => e.toLowerCase().includes('username'))) { %>
                <p class="text-red-500 text-sm mb-2">Username must be at least 5 characters and unique.</p>
            <% } %>
            <label for="userName" class="block text-gray-700 font-medium">Username</label>
            <input 
                type="text" 
                placeholder="Enter Username" 
                name="userName" 
                id="userName" 
                value="<%= typeof oldInput !== 'undefined' ? oldInput.userName : '' %>" 
                required 
                class="w-full px-4 py-3 mt-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
        </div>

        <!-- Email Field -->
        <div class="mb-4">
            <% if (typeof errors !== 'undefined' && errors.some(e => e.toLowerCase().includes('email'))) { %>
                <p class="text-red-500 text-sm mb-2">Email must be valid and unique.</p>
            <% } %>
            <label for="email" class="block text-gray-700 font-medium">Email</label>
            <input 
                type="email" 
                placeholder="Enter Email" 
                name="email" 
                id="email" 
                value="<%= typeof oldInput !== 'undefined' ? oldInput.email : '' %>" 
                required 
                class="w-full px-4 py-3 mt-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
        </div>

        <!-- Password Field -->
        <div class="mb-4">
            <% if (typeof errors !== 'undefined' && errors.some(e => e.toLowerCase().includes('password'))) { %>
                <p class="text-red-500 text-sm mb-2">Password must be at least 5 characters.</p>
            <% } %>
            <label for="password" class="block text-gray-700 font-medium">Password</label>
            <input 
                type="password" 
                placeholder="Enter Password" 
                name="password" 
                id="password" 
                required 
                class="w-full px-4 py-3 mt-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
        </div>

        <!-- Submit Button -->
        <button 
            type="submit" 
            class="w-full bg-blue-500 text-white py-3 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
            Register
        </button>

        <!-- Login Redirect -->
        <div class="text-center mt-4">
            <p class="text-gray-600">Already have an account? <a href="/login" class="text-blue-500 hover:text-blue-700">Login</a>.</p>
        </div>
    </form>
</body>
</html>
